/dts-v1/;
#include <nordic/nrf52832_qfaa.dtsi>

/ {
model = "Desay D6 smart Watch";
compatible = "nordic, nrf52832";

chosen {
	zephyr,console = &uart0;
	zephyr,shell-uart = &uart0;
	zephyr,uart-mcumgr = &uart0;
	zephyr,bt-mon-uart = &uart0;
	zephyr,bt-c2h-uart = &uart0;

	zephyr,sram = &sram0;
	zephyr,flash = &flash0;
	zephyr,code-partition = &slot0_partition;
};
leds    {
	compatible = "gpio-leds";
                led0_green: led_0 {
/*pin 25 is the motor*/
                       gpios = <&gpio0 25 GPIO_ACTIVE_HIGH>; //this is heart rate sensor led
                       label = "Green LED 0";
	//	       default-state = "on";
                };

        };


	buttons {
		compatible = "gpio-keys";
		button0: button_0 {
			gpios = <&gpio0 30 (GPIO_PULL_UP | GPIO_ACTIVE_LOW)>;
			label = "Push button switch 0";
		};
	};

        
        vdd_pwr: vdd-pwr-ctrl {
		compatible = "regulator-fixed";
                label = "vdd-pwr-ctrl";
                regulator-name = "vdd-pwr-ctrl";
                enable-gpios = <&gpio0 26 GPIO_ACTIVE_HIGH>;
                regulator-boot-on;
        };


	aliases {
		sw0 = &button0;
		led0 = &led0_green;
/*		led2 = &led2_blue;
		led0-green = &led0_green;
		led1-red   = &led1_red;
		led2-blue  = &led2_blue;*/
	};

};

&gpiote {
	status = "okay";
};

&gpio0 {
	status = "okay";
};
&uart0 {
	status = "okay";
	compatible = "nordic,nrf-uart";
	current-speed = <115200>;
	tx-pin = <23>;
	rx-pin = <22>;
};

&i2c0 {
	compatible = "nordic,nrf-twi";
	status = "okay";
	sda-pin = <8>;
	scl-pin = <7>;
	clock-frequency = <100000>;
	max44009@6b {
		//power-gpios = <&gpio0 26 1>;
		compatible = "maxim,max44009";
		reg=<0x6b>;
		label="MAX44009";
                vin-supply = <&vdd_pwr>;
	};
};


&i2c1 {
	compatible = "nordic,nrf-twi";
	status = "okay";
	sda-pin = <14>;
	scl-pin = <13>;
	clock-frequency = <100000>;
	BME280@1f {
		compatible = "bosch,bme280";
		reg=<0x1f>;
		label="BME280";
	};
};




&flash0 {
	/*
	 * For more information, see:
	 * http://docs.zephyrproject.org/latest/guides/dts/index.html#flash-partitions
	 */
	partitions {
		compatible = "fixed-partitions";
		#address-cells = <1>;
		#size-cells = <1>;

		boot_partition: partition@0 {
			label = "mcuboot";
			reg = <0x00000000 0x0000C000>;
		};
		slot0_partition: partition@c000 {
			label = "image-0";
			reg = <0x0000C000 0x00032000>;
		};
		slot1_partition: partition@3e000 {
			label = "image-1";
			reg = <0x0003e000 0x00032000>;
		};
		scratch_partition: partition@70000 {
			label = "image-scratch";
			reg = <0x00070000 0x0000a000>;
		};
		storage_partition: partition@7a000 {
			label = "storage";
			reg = <0x0007a000 0x00006000>;
		};
	};
};


&spi2 {
        compatible = "nordic,nrf-spi";
        status = "okay";
        sck-pin = <5>;
        mosi-pin = <6>;
        miso-pin = <0xFF>;
       // cs-gpios = <&gpio0 29 (GPIO_ACTIVE_LOW)>;
        cs-gpios = <&gpio0 29 (GPIO_ACTIVE_LOW)>;
        ssd1306new@0 {
                compatible = "solomon,ssd1306fb";
        	spi-max-frequency = <80000000>; 
                label = "SSD1306NEW";
                reg = <0>;
		segment-offset = <0>;
		page-offset = <0>;
		display-offset = <0>; 
		multiplex-ratio = <31>;
		height = <32>;
		width = <128>;
		segment-remap;
//		com-invdir;
//alternative 0x12		com-sequential;
		prechargep = <0xF1>;
		reset-gpios = <&gpio0 4 0>;
                data_cmd-gpios = <&gpio0 28 0>;
        };
};
